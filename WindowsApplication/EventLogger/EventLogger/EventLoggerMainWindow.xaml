<Window x:Class="EventLogger.EventLoggerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EventLoggerMainWindow" Height="350" Width="525" ShowInTaskbar="False" WindowState="Minimized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ListView Name="ErrorListView">
            <ListView.View>
                    <GridView>
                        <GridViewColumn  DisplayMemberBinding="{Binding Date}"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Origin}"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Payload}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Grid.Row="1"  Name="CloseButton" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Close Button" Click="CloseButton_OnClick"/>
    </Grid>
</Window>
